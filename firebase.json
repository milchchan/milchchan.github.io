{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
    {
      "source": "/about",
      "destination": "/about.html",
      "type": 200
    },
    {
      "source": "/privacy",
      "destination": "/privacy.html",
      "type": 200
    },
    {
      "source": "/preview",
      "destination": "/preview/index.html",
      "type": 200
    },
    {
      "source": "/",
      "destination": "https://merkuchan.com/",
      "type": 301
    }]
  }
}
